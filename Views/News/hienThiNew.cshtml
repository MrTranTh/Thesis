@using Thesis.Models.Entity;
@model Thesis.Models.Entity.News
@{
    ViewData["Title"] = "Chi tiết tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<News> lastNews = ViewBag.noiDungGanDay;
}

<div class="hero-wrap hero-bread" style="background-image: url('/TemplateMain/images/bg_6.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="/">Trang chủ</a></span> <span>Tin tức</span></p>
                <h1 class="mb-0 bread">@Model.Title</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 ftco-animate fadeInUp ftco-animated">
                <h2 class="mb-3">@Model.Title</h2>
                @Html.Raw(Model.Detail)
                <div class="tag-widget post-tag-container mb-5 mt-5">
                    <div class="tagcloud">
                        <a href="#" class="tag-cloud-link">Style</a>
                        <a href="#" class="tag-cloud-link">Vogue</a>
                        <a href="#" class="tag-cloud-link">Accessories</a>
                        <a href="#" class="tag-cloud-link">Clothes</a>
                    </div>
                </div>

                <div class="about-author d-flex p-4 bg-light">
                    <div class="bio align-self-md-center mr-4">
                        <img src="/TemplateMain/images/avatar_me1.jpg" width="350px"alt="Lỗi hiển thị" class="img-fluid mb-4">
                    </div>
                    <div class="desc align-self-md-center">
                        <h3>Trần Đức Thắng</h3>
                        <p>Đam mê thời trang, sức sống của tôi; sự sáng tạo, niềm đam mê của bạn. Hãy khám phá phong cách của bạn và tỏa sáng với sự tự tin từ gu thời trang của Thang Boutique.</p>
                    </div>
                </div>


                <div class="pt-5 mt-5">
                    <div class="comment-form-wrap pt-5">
                        <h3 class="mb-5">Để lại lời bình luận của bạn</h3>
                        <form asp-controller="News" asp-action="NhatXetKhachHang" method="post" class="p-5 bg-light">
                            <div class="form-group">
                                <label for="name">Họ và tên</label>
                                <input type="text" class="form-control" id="name" name="hoTen">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email">
                            </div>
                            <div class="form-group">
                                <label for="address">Địa chỉ</label>
                                <input type="text" class="form-control" id="address" name="diaChi">
                            </div>

                            <div class="form-group">
                                <label for="message">Lời nhắn</label>
                                <textarea name="loiNhan" id="message" cols="30" rows="10" class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Gửi" class="btn py-3 px-4 btn-primary">
                            </div>
                        </form>
                    </div>
                </div>
            </div> <!-- .col-md-8 -->
            <div class="col-lg-4 sidebar ftco-animate fadeInUp ftco-animated">
                <div class="sidebar-box">
                    <form action="#" class="search-form">
                        <div class="form-group">
                            <span class="icon ion-ios-search"></span>
                            <input type="text" class="form-control" placeholder="Type a keyword and hit enter">
                        </div>
                    </form>
                </div>
                <div class="sidebar-box ftco-animate fadeInUp ftco-animated">
                    <h3 class="heading">Danh mục sản phẩm</h3>
                    <ul class="categories">
                        @Html.Partial("~/Views/Menu/MenuLeft.cshtml")
                    </ul>
                </div>

                <div class="sidebar-box ftco-animate fadeInUp ftco-animated">
                    <h3 class="heading">Tin tức gần đây</h3>                                      
                    @if (lastNews != null && lastNews.Any())
                    {
                        foreach (var item in lastNews)
                        {
                            <div class="block-21 mb-4 d-flex">
                                <a class="blog-img mr-4" style="background-image: url(@item.Image);"></a>
                                <div class="text">
                                    <h3 class="heading-1"><a href="/tin-tuc/@item.Id">@item.Title</a></h3>
                                    <div class="meta">
                                        <div><a href="#"><span class="icon-calendar"></span> @item.CreatedDate</a></div>
                                        <div><a href="#"><span class="icon-person"></span> Duc Thang</a></div>
                                        <div><a href="#"><span class="icon-chat"></span> 99</a></div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    
                </div>

                <div class="sidebar-box ftco-animate fadeInUp ftco-animated">
                    <h3 class="heading">Tag Cloud</h3>
                    <div class="tagcloud">
                        <a href="#" class="tag-cloud-link">shop</a>
                        <a href="#" class="tag-cloud-link">products</a>
                        <a href="#" class="tag-cloud-link">shirt</a>
                        <a href="#" class="tag-cloud-link">jeans</a>
                        <a href="#" class="tag-cloud-link">shoes</a>
                        <a href="#" class="tag-cloud-link">dress</a>
                        <a href="#" class="tag-cloud-link">coats</a>
                        <a href="#" class="tag-cloud-link">jumpsuits</a>
                    </div>
                </div>

                <div class="sidebar-box ftco-animate fadeInUp ftco-animated">
                    <h3 class="heading">Trích dẫn</h3>
                    <p>"Dù bạn ở đâu, dù bạn là ai, mặc đẹp luôn là một phần của cuộc sống hàng ngày. Thời trang không chỉ là việc mặc quần áo, mà còn là cách để thể hiện bản thân, diễn đạt cái tôi của mỗi người." - Blair Waldorf</p>
                </div>
            </div>

        </div>
    </div>
</section>



