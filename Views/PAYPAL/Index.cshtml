@{
    ViewData["Title"] = "Thanh toán PAYPAL";
}

<div class="hero-wrap hero-bread" style="background-image: url('/TemplateMain/images/bg_6.jpg');">
    <div class="container">
    <div class="row no-gutters slider-text align-items-center justify-content-center">
        <div class="col-md-9 ftco-animate text-center">
            <p class="breadcrumbs"><span class="mr-2"><a href="/">Home</a></span> <span>Thanh toán PAYPAL</span></p>
        <h1 class="mb-0 bread">Thanh toán PAYPAL</h1>
        </div>
    </div>
    </div>
</div>

<section class="ftco-section">
	  <div class="container">
		<div class="row justify-content-center">
		  <div class="col-xl-10 ftco-animate fadeInUp ftco-animated">
            <h4>Thông tin thanh toán PAYPAL</h4>
            <br/>
            <form action="/PAYPAL/CreatePaymentUrl" id="frmCreateOrder" method="POST" class="billing-form">
                <div class="form-group">
                    <label for="ordertype">Địa chỉ</label>
                    <select name="OrderType" id="ordertype" class="form-control">
                        <option value="hanoi">Hà Nội</option>
                        <option value="hochiminh">Hồ Chí Minh</option>
                        <option value="danang">Đà Nẵng</option>
                        <option value="haiphong">Hải Phòng</option>
                        <option value="cantho">Cần Thơ</option>
                    </select>
                </div>
                <br/>
                <div class="form-group">
                    <label for="Name">Tên khách hàng</label>
                    <input class="form-control"
                            id="Name"
                            name="Name"
                            type="text"
                            value="">
                </div>
                <br/>
                <div class="form-group">
                    <label for="Amount">Số tiền</label>
                    <input class="form-control"
                            id="Amount"
                            name="Amount"
                            type="text"
                            value="">
                </div>
                <br/>
                <div class="form-group">
                    <label for="OrderDescription">Nội dung thanh toán</label>
                    <textarea class="form-control" 
                                cols="20" 
                                id="OrderDescription" 
                                name="OrderDescription" 
                                rows="2">Thanh toán tại Thang Boutique</textarea>
                </div>
                <br/>
                <button type="submit" class="btn btn-primary">Thanh toán</button>
            </form>
		  </div> <!-- .col-md-8 -->
		</div>
	  </div>
</section>
